<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/session_length"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Session Length: 30 min"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:textSize="30dp"

        />


    <TextView
        android:id="@+id/cost_title"
        android:layout_below="@id/session_length"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Session Price: $15/hr"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="30dp"
    />

    <View android:id="@+id/separator"
        android:background="#000"
        android:layout_width = "350dp"
        android:layout_marginTop="10dp"
        android:layout_height="1dip"
        android:layout_centerHorizontal="true"
        android:paddingRight="3dp"
        android:paddingLeft="3dp"
        android:layout_below="@id/cost_title"/>

    <TextView
        android:id="@+id/total_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total: $7.50"
        android:layout_below="@id/session_length"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:textSize="50dp"

    />

    <TextView
        android:id="@+id/rateTutor"
        android:layout_below="@id/total_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/profilePic"
        android:layout_alignStart="@+id/profilePic"
        android:textSize="20dp"
        android:layout_marginTop="15dp"
        android:text="Rate Tutor:"/>


    <ImageView
        android:id="@+id/profilePic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/rateTutor"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:src="@drawable/user_icon"
        android:background="@color/theme"
        android:layout_marginRight = "6dip" />



    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar2"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/profilePic"
        android:layout_centerHorizontal="true"/>


    <Button
        android:id="@+id/doneBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ratingBar2"
        android:background="@color/theme"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Done"
    />





</RelativeLayout>